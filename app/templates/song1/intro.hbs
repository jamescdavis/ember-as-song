    <p.note @t='0:0:0' @p='C2' />
    <p.note @t='0:1:2' @p='E2' />
    <p.note @t='0:1:3' @p='F2' />
    <p.note @t='0:2:0' @p='C2' />
    <p.note @t='0:3:0' @p='C2' />
  </i.part>
</Instrument>

